  number = {04},
  pages = {505--512},
  issn = {1001-4918},
  doi = {10.16187/j.cnki.issn1001-4918.2022.04.06},
  url = {https://kns.cnki.net/kcms/detail/detail.aspx?dbcode=CAPJ&dbname=CAPJLAST&filename=XLFZ20220126005&uniplatform=NZKPT&v=QzdPDyYB7VskyP6AB61S5KUdtScbVIwIRWNyWLsPQaNroQa8Ke_7fZr4rOGHJ9sI},
